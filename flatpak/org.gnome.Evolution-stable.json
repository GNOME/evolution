	"rename-icon": "evolution",
	"copy-icon": true,
	"branch": "gnome-49",
	"desktop-file-name-suffix": " (3.58)",
	"build-options" : {
		"cflags": "-O2 -g -Wno-deprecated-declarations",
		"cxxflags": "-O2 -g -Wno-deprecated-declarations"
