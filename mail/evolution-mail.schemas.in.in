    <!-- Prompt settings -->

    <schema>
      <key>/schemas/apps/evolution/mail/prompts/empty_subject</key>
      <applyto>/apps/evolution/mail/prompts/empty_subject</applyto>
      <owner>evolution-mail</owner>
      <type>bool</type>
