<?xml version="1.0"?>
<e-plugin-list>
    <e-plugin id="org.gnome.evolution.select_one_source" type="shlib" 
	_name="Select one source" 
		location="@PLUGINDIR@/liborg-gnome-select-one-source.so">
		<author name="JP Rosevear" email="jpr@novell.com"/>
	       	<_description>Selects a single calendar or task source for viewing.</_description>
	
		<hook class="org.gnome.evolution.calendar.popup:1.0">
			<menu id="org.gnome.evolution.tasks.source.popup" target="source">
				<item type="item" path="25.select_one_source" _label="_Show only this Task List" icon="stock_check-filled" activate="org_gnome_select_one_source"/>
			</menu>
			<menu id="org.gnome.evolution.calendar.source.popup" target="source">
				<item type="item" path="25.select_one_source" _label="_Show only this Calendar" icon="stock_check-filled" activate="org_gnome_select_one_source"/>
			</menu>
		</hook>
	</e-plugin>
</e-plugin-list>