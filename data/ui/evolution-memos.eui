    <separator/>
    <item action='memo-list-manage-groups-popup'/>
    <separator/>
    <item action='memo-list-properties'/>
  </menu>
  <menu id='search-options'>
    <item action='memo-search-advanced-hidden' group='search-options'/>
    <item action='memo-search-summary-contains' group='search-options'/>
    <item action='memo-search-description-contains' group='search-options'/>
    <item action='memo-search-any-field-contains' group='search-options'/>
    <separator/>
    <item action='search-advanced'/>
    <submenu action="saved-searches">
      <item action='EShellView::saved-searches-list'/>
    </submenu>
  </menu>
</eui>
